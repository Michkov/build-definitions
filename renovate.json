{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "tekton": {
    "fileMatch": ["\\.yaml$", "\\.yml$"],
    "includePaths": [".tekton/**", "task/**"]
  },
  "groupName": "Renovate updates",
  "groupSlug": "all",
  "includeForks": true,
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "groupName": "Renovate updates",
      "groupSlug": "all",
    }
  ],
  "separateMajorMinor": false
}
