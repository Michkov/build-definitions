{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "tekton": {
      "fileMatch": ["\\.yaml$", "\\.yml$"],
      "includePaths": [".tekton/**", "task/**"]
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "groupName": "all"
    }
  ],
  "includeForks": true
}
